{
  "name": "node-tools",
  "version": "0.0.0",
  "scripts": {
    "sass": "./node_modules/node-sass/bin/node-sass --output-style compressed ../../src/css/style.scss",
    "autoprefixer": "./node_modules/postcss-cli/bin/postcss -u autoprefixer --autoprefixer.browsers '> 1%' -o ../../s/css/style.min.css --no-map",
    "build-css": "npm run sass | npm run autoprefixer"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "node-sass": "^4.6.1",
    "postcss-cli": "^4.1.1"
  }
}
